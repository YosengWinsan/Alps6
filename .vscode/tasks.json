{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Server Build",
            "command": "dotnet publish -c release",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/Alps.Web.Service"
            }
        },
        {
            "label": "Client Build",
            "command": "ng build --prod --aot",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/Alps.Web.Angular"
            }
        },
        {
            "label": "Alps Build",
            "dependsOn": [
                "Client Build",
                "Server Build"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Client Start",
            "command": "ng serve --o --proxy-config proxy.conf.json",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/Alps.Web.Angular"
            }
        },
        {
            "label": "Server Start",
            "command": "dotnet watch run",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/Alps.Web.Service"
            }
        },
        {
            "label": "Start",
            "dependsOn": [
                "Client Start",
                "Server Start"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "type": "npm",
            "script": "build",
            "path": "Alps.Web.Angular/",
            "group": "build",
            "problemMatcher": []
        }
    ]
}