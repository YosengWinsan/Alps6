{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Server Build",
            "command": "dotnet publish -c release",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/Alps.Web.Service"
            }
           // ,            "problemMatcher": "$msCompile"
        },
        {
            "label": "Client Build",
            "command": "ng build --prod --aot",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/Alps.Web.Angular"
            }
            //,            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build",
            "dependsOn": [ "Client Build","Server Build"],
            "dependsOrder": "sequence",
            "presentation": {
                "reveal": "always"
            }
        },        
        {
            "label": "Client Start",
            "command": "ng serve --o --proxy-config proxy.conf.json",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/Alps.Web.Angular"
            }
           // ,            "problemMatcher": "$msCompile"
        },
        {
            "label": "Server Start",
            "command": "dotnet watch run",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/Alps.Web.Service"
            }
           // ,            "problemMatcher": "$msCompile"
        }        ,
        {
            "label": "Start",
            "dependsOn": [ "Client Start","Server Start"],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}